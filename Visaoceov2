                    charts.operacoesFoco = new Chart(ctxOperacoesFoco, {
                        type: 'bar',
                        data: {
                            labels: [
                                ['Reconhecimento', 'regular (2.88)'],
                                ['Dimens√£o: Reconhec.', '& Feedback (3.38)']
                            ],
                            datasets: [{
                                label: 'M√©dia da Pergunta',
                                data: [2.88, 3.38],
                                backgroundColor: colorCritical,
                                borderRadius: 4
                            }]
                        },
                        options: commonHorizontalOptions
                    });
                }
            };
            
            // Fun√ß√£o para criar gr√°ficos do Foco Cr√©dito
            const createFocoCreditoCharts = () => {
                const ctxCreditoFoco = document.getElementById('causaCreditoChart_Foco')?.getContext('2d');
                if(ctxCreditoFoco) {
                    destroyChart(charts.creditoFoco);
                    charts.creditoFoco = new Chart(ctxCreditoFoco, {
                        type: 'bar',
                        data: {
                            labels: [
                                ['Comunica√ß√£o', 'direta e honesta (3.13)'],
                                ['Compensa√ß√£o', 'Justa (3.25)'],
                                ['Confio em meus', 'colegas (3.50)'],
                                ['Dimens√£o: Conex√£o', 'com colegas (3.72)']
                            ],
                            datasets: [{
                                label: 'M√©dia da Pergunta',
                                data: [3.13, 3.25, 3.50, 3.72],
                                backgroundColor: colorCritical,
                                borderRadius: 4
                            }]
                        },
                        options: commonHorizontalOptions
                    });
                }
            };

            // NAVEGA√á√ÉO PRINCIPAL (ABAS)
            const mainTabButtonsContainer = document.getElementById('mainTabButtons');
            const mainTabContents = document.getElementById('mainTabContents').children;

            mainTabButtonsContainer.addEventListener('click', (event) => {
                const clickedButton = event.target.closest('[data-main-tab-button]');
                if (!clickedButton) return;

                const tabId = clickedButton.dataset.mainTabButton;
                
                // Destr√≥i TODOS os gr√°ficos antes de mudar de aba
                destroyAllCharts();

                for (let button of mainTabButtonsContainer.children) {
                    button.classList.remove('active');
                }
                clickedButton.classList.add('active');
                
                for (let content of mainTabContents) {
                    if (content.dataset.mainTabContent === tabId) {
                        content.classList.add('active');
                        // Renderiza os gr√°ficos APENAS da aba que se tornou ativa
                        if (tabId === 'dashboard') {
                            createDashboardCharts();
                        } else if (tabId === 'analise') {
                            createAnaliseCharts();
                        } else if (tabId === 'foco_opcont') {
                            createFocoOpContCharts();
                        } else if (tabId === 'foco_credito') {
                            createFocoCreditoCharts();
                        }
                    } else {
                        content.classList.remove('active');
                    }
                }
            });

            // NAVEGA√á√ÉO SECUND√ÅRIA (Plano de A√ß√£o)
            const tabButtonsContainer = document.getElementById('tabButtons');
            const tabContents = document.getElementById('tabContents').children;

            if (tabButtonsContainer) {
                tabButtonsContainer.addEventListener('click', (event) => {
                    const clickedButton = event.target.closest('[data-tab]');
                    if (!clickedButton) return;

                    const tabId = clickedButton.dataset.tab;
                    
                    for (let button of tabButtonsContainer.children) {
                        button.classList.remove('active');
                    }
                    clickedButton.classList.add('active');
                    
                    for (let content of tabContents) {
                        if (content.dataset.tabContent === tabId) {
                            content.classList.add('active');
                        } else {
                            content.classList.remove('active');
                        }
                    }
                });
            }

            // Inicializa os gr√°ficos da primeira aba (Dashboard)
            createDashboardCharts();
        });
    </script>
</body>
</html>
